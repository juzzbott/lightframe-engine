{
    "tasks": [
        {
            "type": "shell",
            "label": "build-engine",
            "command": "${workspaceFolder}/build.sh -target test_bed",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "run-tests",
            "command": "${workspaceFolder}/build.sh -test",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "group": "test",
            "detail": "Build and run unit tests."
        }
    ],
    "version": "2.0.0"
}